@using ValueScreener.Authorization
@using ValueScreener.Models.Domain
<br />

<br />
@if ((await AuthorizationService.AuthorizeAsync(User, new Stock(), StockOperations.Create)).Succeeded)
{
    <form asp-controller="RefreshData" asp-action="RefreshMarketData" method="Post">
        <div class="form-group">
            <input type="submit" value="Refresh Market Data" class="btn btn-primary"/>
        </div>
    </form>
    <form asp-controller="RefreshData" asp-action="DeleteMarketData" method="Post">
        <div class="form-group">
            <input type="submit" value="Delete Market Data" class="btn btn-primary"/>
        </div>
    </form>
    <form asp-controller="RefreshData" asp-action="RefreshAnnualFinancialStatements" method="Post">
        <div class="form-group">
            <input type="submit" value="Refresh  Annual Statements" class="btn btn-primary"/>
        </div>
    </form>
    <form asp-controller="RefreshData" asp-action="DeleteFinancialStatements" method="Post">
        <div class="form-group">
            <input type="submit" value="Delete Financial Statements" class="btn btn-primary"/>
        </div>
    </form>
    <form asp-controller="RefreshData" asp-action="RefreshPricingResults" method="Post">
        <div class="form-group">
            <input type="submit" value="Refresh  Valuations" class="btn btn-primary"/>
        </div>
    </form>
    <form asp-controller="RefreshData" asp-action="DeleteValuations" method="Post">
        <div class="form-group">
            <input type="submit" value="Delete Valuations" class="btn btn-primary"/>
        </div>
    </form>
}